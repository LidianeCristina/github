<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RegiÃ£o Sul"
            android:textSize="40sp"
            android:layout_gravity="center_horizontal"
            android:textColor="#CE93D8"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/imageView2"
            android:src="@drawable/regiaosul"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="60dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_below="@id/imageView2"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cultura"
                android:layout_margin="3dp"
                android:textSize="20sp"
                android:onClick="culturaSul"
                android:background="#CE93D8"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="climaSul"
                android:text="Clima"
                android:textSize="20sp"
                android:layout_margin="3dp"
                android:background="#CE93D8"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="estadosSul"
                android:text="Estados"
                android:textSize="20sp"
                android:layout_margin="3dp"
                android:background="#CE93D8"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Curiosidades"
                android:layout_margin="3dp"
                android:onClick="curiosidadesSul"
                android:textSize="20sp"
                android:background="#CE93D8"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>