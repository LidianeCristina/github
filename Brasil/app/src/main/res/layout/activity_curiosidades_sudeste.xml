<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.lidianecristina.brasil.CuriosidadesSudeste">

        <TextView
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curiosidades"
            android:textSize="40sp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textView"
            android:textColor="#FF5722"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="              É a região mais populosa do Brasil. "
            android:textColor="#000000"
            android:layout_below="@id/textView"
            android:id="@+id/textView2"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="              É a região que possui o maior PIB (Produto Interno Bruto) do Brasil. "
            android:textColor="#000000"
            android:layout_below="@id/textView2"
            android:id="@+id/textView3"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="              Possui os três estados mais populosos e as três maiores metropolis do Brasil. "
            android:textColor="#000000"
            android:layout_below="@id/textView3"
            android:id="@+id/textView4"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="              É a região mais vizitada do Brasil "
            android:textColor="#000000"
            android:layout_below="@id/textView4"
            android:id="@+id/textView5"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="              Possui as cidades mais altas do Brasil. "
            android:textColor="#000000"
            android:layout_below="@id/textView5"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
</ScrollView>