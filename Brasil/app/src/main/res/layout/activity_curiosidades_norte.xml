<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        tools:context="com.example.lidianecristina.brasil.CuriosidadesNorte">

        <TextView
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curiosidades"
            android:textSize="40sp"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textColor="#4CAF50"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="          Se a região Norte com seus 3.869.637,9 km² de área fosse um país seria o sétimo maior país do mundo."
            android:textColor="#000000"
            android:layout_below="@id/textView"
            android:id="@+id/textView2"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="          A região Norte abriga a maior rede hidrográfica do mundo, a Bacia Amazônica."
            android:textColor="#000000"
            android:layout_below="@id/textView2"
            android:id="@+id/textView3"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="              A Floresta Amazônica possui uma das mais ricas biodiversidades do mundo."
            android:textColor="#000000"
            android:layout_below="@id/textView3"
            android:id="@+id/textView4"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="              As duas maiores festas populares do Norte são o Círio de Nazaré e o Festival de Parintins."
            android:textColor="#000000"
            android:layout_below="@id/textView4"
            android:id="@+id/textView5"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="              A Serra dos Carajás figura como uma das maiores jazidas do mundo."
            android:layout_below="@id/textView5"
            android:id="@+id/textView6"
            android:textColor="#000000"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="              A região Norte é onde se encontra um terço das espécies vivas do planeta."
            android:textColor="#000000"
            android:layout_below="@id/textView6"
            android:layout_marginTop="10dp"
            android:id="@+id/textView7"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="              A Ilha do Bananal é a maior ilha fluvial do mundo."
            android:layout_below="@id/textView7"
            android:id="@+id/textView8"
            android:textColor="#000000"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="              Belém é uma das cidades com maior precipitações pluviais do mundo."
            android:textColor="#000000"
            android:layout_below="@id/textView8"
            android:id="@+id/textView9"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="          A região Norte é a menos habitada do brasil."
            android:textColor="#000000"
            android:layout_below="@id/textView9"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
</ScrollView>