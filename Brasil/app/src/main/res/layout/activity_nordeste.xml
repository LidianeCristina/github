<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RegiÃ£o Nordeste"
            android:textSize="40sp"
            android:id="@+id/textView"
            android:textColor="#FF9800"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:id="@+id/imageView2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/regiaonordeste"
            android:layout_marginTop="60dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_below="@id/imageView2"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cultura"
                android:textSize="20sp"
                android:layout_margin="3dp"
                android:onClick="culturaNordeste"
                android:background="#FF9800"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="climaNordeste"
                android:text="Clima"
                android:layout_margin="3dp"
                android:textSize="20sp"
                android:background="#FF9800"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estados"
                android:textSize="20sp"
                android:layout_margin="3dp"
                android:onClick="estadosNordeste"
                android:background="#FF9800"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Curiosidades"
                android:onClick="curiosidadesNordeste"
                android:textSize="20sp"
                android:layout_margin="3dp"
                android:background="#FF9800"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>